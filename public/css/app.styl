body
    padding: 15px

.logotype
    font-size: 72px
    margin: 20px 0 6px 0

.instructions
    padding: 0 15px 10px 5px
    color: #999

.player-count
    position: absolute
    top: 0px
    right: 0px
    padding: 2px 7px
    border-bottom: solid 1px #bbb
    border-left: solid 1px #bbb
    font-size: 82%
    color: #888
    background: #eee

.header
    width: 400px;

.btn-large
    font-size: 200%

#ui
    font-size: 25px

sup
    color: #777
    cursor: default

sup.good
    color: green

sup.bad
    color: red

#message
    color: white

#message.error
    background-color: red

#message.info
    background-color: green


#single-player-instructions
    label
        color: #888

ul#mandatory-words
    padding: 0
    list-style: none
    display: inline
    li
        display: inline
        margin-right: 0.5em
        color: #444
        font-weight: bold
    li.used
        color: green
    li.unused
        color: red

.player1, .player1-word
    color: red

.player2, .player2-word
    color: green
